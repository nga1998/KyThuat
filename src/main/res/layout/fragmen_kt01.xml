<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".KT01.Fragmen_KT01">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/maso1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Mã số"
            android:textSize="20sp"
            android:gravity="center"
            android:background="#3F51B5"
            android:textColor="#FFFFFF"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="2dp"/>

        <TextView
            android:id="@+id/chitiet1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:text="Nội dung khảo hạch"
            android:textSize="20sp"
            android:gravity="center"
            android:background="#3F51B5"
            android:textColor="#FFFFFF"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="2dp"/>

        <TextView
            android:id="@+id/diemso1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:text="Điểm số"
            android:textSize="20sp"
            android:gravity="center"
            android:background="#3F51B5"
            android:textColor="#FFFFFF"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="2dp"/>

        <TextView
            android:id="@+id/diemdat1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:text="Điểm đạt"
            android:textSize="20sp"
            android:gravity="center"
            android:background="#3F51B5"
            android:textColor="#FFFFFF"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="2dp"/>

        <TextView
            android:id="@+id/ghichu1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.3"
            android:text="Ghi chép khảo hạch"
            android:textSize="20sp"
            android:gravity="center"
            android:background="#3F51B5"
            android:textColor="#FFFFFF"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"/>
    </LinearLayout>
    <!--RecyclerView-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:background="#228BC34A"
        />

</LinearLayout>